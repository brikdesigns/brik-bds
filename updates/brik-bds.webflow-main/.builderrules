# Visual Copilot Configuration for Brik BDS Webflow Project

# Framework and Output Settings
framework: html
styling: css
outputFormat: webflow
useExistingComponents: true
responsiveDesign: true
designTokens: true
tokenSource: "css/design-tokens.css"

# Code Generation Rules
componentNaming: kebab-case
cssNaming: kebab-case
useSemanticHTML: true
accessibility: true
seoOptimized: true

# Design System Integration
useDesignTokens: true
tokenPrefix: "--"
colorTokens: "--color---"
typographyTokens: "--typography---"
spacingTokens: "--spacing---"

# Webflow Specific
webflowCompatible: true
useWebflowClasses: true
maintainWebflowStructure: true

# Responsive Design
mobileFirst: true
breakpoints:
  - mobile: 768px
  - tablet: 1024px
  - desktop: 1200px

# Code Quality
minifyCSS: false
minifyHTML: false
addComments: true
useModernCSS: true 